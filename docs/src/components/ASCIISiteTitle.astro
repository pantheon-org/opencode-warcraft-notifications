---
import { blockyTextToSVG } from '../utils/blocky-text-to-svg';

// Generate blocky pixel-art logo matching OpenCode.ai style
const logoSVG = blockyTextToSVG('WARCRAFT', {
	colorLight: '#F1ECEC',
	colorMedium: '#B7B1B1',
	colorDark: '#4B4646',
	blockSize: 6,
	charSpacing: 6,
});
---

<a href={`${import.meta.env.BASE_URL}`} class="site-title">
	<div set:html={logoSVG} class="logo-container" />
	<span class="sr-only">Warcraft Notifications</span>
</a>

<style>
	.site-title {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: inherit;
	}

	.logo-container :global(svg) {
		width: auto;
		height: 2.5rem;
	}

	@media (min-width: 50rem) {
		.logo-container :global(svg) {
			height: 2.625rem;
		}
	}
</style>
