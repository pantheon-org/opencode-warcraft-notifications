{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenCode Plugin Configuration",
  "description": "Configuration file for OpenCode plugins",
  "type": "object",
  "properties": {
    "@pantheon-ai/opencode-warcraft-notifications": {
      "type": "object",
      "description": "Configuration for Warcraft II notifications plugin (Alliance and Horde sounds)",
      "properties": {
        "soundsDir": {
          "type": "string",
          "description": "Directory where sound files should be stored and cached",
          "examples": [
            "/home/user/.cache/opencode-warcraft-sounds",
            "/path/to/custom/sounds",
            "C:\\Users\\Username\\AppData\\Local\\OpenCode\\Sounds"
          ]
        },
        "faction": {
          "type": "string",
          "enum": ["alliance", "horde", "both"],
          "default": "both",
          "description": "Which faction sounds to use: 'alliance' for Alliance sounds only, 'horde' for Horde sounds only, or 'both' for random sounds from both factions",
          "examples": ["alliance", "horde", "both"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "soundsDir": "~/.cache/opencode-warcraft-sounds",
        "faction": "both"
      }
    },
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "faction": "alliance"
      }
    },
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "faction": "horde"
      }
    }
  ]
}