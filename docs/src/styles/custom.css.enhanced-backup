}

/* === Phase 3: Component Styling === */

/* === Button Components === */
.sl-link-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.4375rem 1.125rem;
  border-radius: 999rem;
  font-size: var(--sl-text-sm, 0.875rem);
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s ease;
}

.sl-link-button.primary {
  background: var(--sl-color-accent);
  color: var(--sl-color-black);
  border: 1px solid var(--sl-color-accent);
}

.sl-link-button.primary:hover {
  background: var(--sl-color-accent-high);
  border-color: var(--sl-color-accent-high);
}

.sl-link-button.secondary {
  background: transparent;
  color: var(--sl-color-accent);
  border: 1px solid var(--sl-color-accent);
}

.sl-link-button.secondary:hover {
  background: var(--sl-color-accent-low);
}

.sl-link-button.minimal {
  background: transparent;
  color: var(--sl-color-text);
  border: none;
}

.sl-link-button.minimal:hover {
  background: var(--sl-color-gray-2);
}

/* === Badge Components === */
.sl-badge {
  display: inline-block;
  padding: 0.175rem 0.35rem;
  border-radius: 0.25rem;
  border: 1px solid currentColor;
  font-size: var(--sl-text-xs, 0.75rem);
  font-weight: 600;
  line-height: 1;
}

.sl-badge.default {
  color: var(--sl-color-gray-4);
  background: var(--sl-color-badge-default);
  border-color: var(--sl-color-gray-3);
}

.sl-badge.note {
  color: var(--sl-color-badge-note);
  background: color-mix(in srgb, var(--sl-color-badge-note) 15%, transparent);
  border-color: var(--sl-color-badge-note);
}

.sl-badge.success,
.sl-badge.tip {
  color: var(--sl-color-badge-success);
  background: color-mix(in srgb, var(--sl-color-badge-success) 15%, transparent);
  border-color: var(--sl-color-badge-success);
}

.sl-badge.caution {
  color: var(--sl-color-badge-caution);
  background: color-mix(in srgb, var(--sl-color-badge-caution) 15%, transparent);
  border-color: var(--sl-color-badge-caution);
}

.sl-badge.danger {
  color: var(--sl-color-badge-danger);
  background: color-mix(in srgb, var(--sl-color-badge-danger) 15%, transparent);
  border-color: var(--sl-color-badge-danger);
}

/* === Code Block Styling === */
.expressive-code {
  margin: 1.5rem 0;
  border-radius: var(--sl-border-radius);
  overflow: hidden;
}

.expressive-code .frame {
  border: 1px solid var(--sl-color-hairline);
  background: var(--sl-color-gray-1);
}

.expressive-code .frame.is-terminal {
  background: var(--sl-color-gray-2);
}

.expressive-code .copy {
  background: var(--sl-color-gray-2);
  color: var(--sl-color-gray-4);
  border: 1px solid var(--sl-color-hairline);
  border-radius: 0.25rem;
  padding: 0.25rem 0.5rem;
  font-size: var(--sl-text-xs, 0.75rem);
  transition: all 0.2s ease;
}

.expressive-code .copy:hover {
  background: var(--sl-color-gray-3);
  border-color: var(--sl-color-accent);
}

/* Syntax highlighting is handled by Expressive Code themes (github-light/github-dark) */
/* Let Expressive Code manage syntax colors based on theme */

/* === Sidebar Navigation === */
.sidebar-content a {
  color: var(--sl-color-text);
}

.sidebar-content a[aria-current='page'] {
  background: var(--sl-color-accent-low);
  color: var(--sl-color-accent);
  font-weight: 600;
  border-left: 3px solid var(--sl-color-accent);
  padding-left: calc(1rem - 3px);
}

.sidebar-content a:hover {
  background: var(--sl-color-gray-2);
  color: var(--sl-color-accent);
}

/* === Table of Contents === */
.right-sidebar-panel a {
  color: var(--sl-color-text);
}

.right-sidebar-panel a[aria-current='true'] {
  color: var(--sl-color-accent);
  font-weight: 600;
}

.right-sidebar-panel a:hover {
  color: var(--sl-color-accent);
  text-decoration: underline;
}

/* === Phase 6: Typography & Spacing === */

/* Typography System */
.sl-markdown-content {
  font-size: var(--sl-text-base, 1rem);
  line-height: var(--sl-line-height);
  color: var(--sl-color-text);
}

.sl-markdown-content h1 {
  font-size: 2.25rem;
  line-height: var(--sl-line-height-headings);
  margin-top: 0;
  margin-bottom: 1.5rem;
  font-weight: 700;
  color: var(--sl-color-text);
}

.sl-markdown-content h2 {
  font-size: 1.75rem;
  line-height: var(--sl-line-height-headings);
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  font-weight: 600;
  color: var(--sl-color-text);
  border-bottom: 1px solid var(--sl-color-hairline-light);
  padding-bottom: 0.5rem;
}

.sl-markdown-content h3 {
  font-size: 1.375rem;
  line-height: var(--sl-line-height-headings);
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  font-weight: 600;
  color: var(--sl-color-text);
}

.sl-markdown-content h4 {
  font-size: 1.125rem;
  line-height: var(--sl-line-height-headings);
  margin-top: 1.5rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: var(--sl-color-text);
}

.sl-markdown-content h5,
.sl-markdown-content h6 {
  font-size: 1rem;
  line-height: var(--sl-line-height-headings);
  margin-top: 1.25rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: var(--sl-color-text);
}

.sl-markdown-content p {
  margin: 1rem 0;
  line-height: var(--sl-line-height);
}

/* Inline Code */
.sl-markdown-content code {
  font-family: var(--sl-font-mono);
  font-size: 0.9em;
  background: var(--sl-color-bg-inline-code);
  padding: 0.125rem 0.375rem;
  border-radius: 0.25rem;
  border: 1px solid var(--sl-color-hairline);
  color: var(--sl-color-text);
}

.sl-markdown-content pre code {
  background: transparent;
  padding: 0;
  border: none;
  font-size: 0.875rem;
}

/* Code blocks */
.sl-markdown-content pre {
  border-radius: var(--sl-border-radius);
  padding: 1.5rem;
  margin: 1.5rem 0;
  overflow-x: auto;
}

/* List Styling */
.sl-markdown-content ul,
.sl-markdown-content ol {
  margin: 1rem 0;
  padding-left: 1.5rem;
}

.sl-markdown-content li {
  margin: 0.5rem 0;
  line-height: var(--sl-line-height);
}

.sl-markdown-content li > ul,
.sl-markdown-content li > ol {
  margin: 0.5rem 0;
}

/* Nested list indentation */
.sl-markdown-content ul ul,
.sl-markdown-content ol ol,
.sl-markdown-content ul ol,
.sl-markdown-content ol ul {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

/* Blockquotes */
.sl-markdown-content blockquote {
  margin: 1.5rem 0;
  padding: 1rem 1.5rem;
  border-left: 4px solid var(--sl-color-accent);
  background: var(--sl-color-gray-1);
  border-radius: var(--sl-border-radius);
  color: var(--sl-color-text);
}

.sl-markdown-content blockquote p {
  margin: 0.5rem 0;
}

/* Horizontal Rules */
.sl-markdown-content hr {
  margin: 3rem 0;
  border: none;
  border-top: 1px solid var(--sl-color-hairline-light);
}

/* Tables */
.sl-markdown-content table {
  width: 100%;
  margin: 1.5rem 0;
  border-collapse: collapse;
  border: 1px solid var(--sl-color-hairline);
  border-radius: var(--sl-border-radius);
  overflow: hidden;
}

.sl-markdown-content th,
.sl-markdown-content td {
  padding: 0.75rem 1rem;
  border: 1px solid var(--sl-color-hairline);
  text-align: left;
}

.sl-markdown-content th {
  background: var(--sl-color-gray-2);
  font-weight: 600;
  color: var(--sl-color-text);
}

.sl-markdown-content tbody tr:nth-child(even) {
  background: var(--sl-color-gray-1);
}

/* Callout boxes (Asides) */
.sl-markdown-content aside {
  margin: 1.5rem 0;
  padding: 1rem 1.5rem;
  border-radius: var(--sl-border-radius);
  border-left: 4px solid currentColor;
}

/* Link styles */
.sl-markdown-content a {
  color: var(--sl-color-accent);
  text-decoration: none;
  transition: text-decoration 0.2s ease;
}

.sl-markdown-content a:hover {
  text-decoration: underline;
}

/* Strong and emphasis */
.sl-markdown-content strong {
  font-weight: 600;
  color: var(--sl-color-text);
}

.sl-markdown-content em {
  font-style: italic;
}

/* === Phase 7: Responsive Design === */

/* Mobile breakpoint - 800px (50em) to match OpenCode */
@media (max-width: 50em) {
  :root {
    --sl-content-width: 100%;
    --sl-text-base: 0.9375rem;
  }

  /* Mobile typography adjustments */
  .sl-markdown-content h1 {
    font-size: 1.875rem;
  }

  .sl-markdown-content h2 {
    font-size: 1.5rem;
  }

  .sl-markdown-content h3 {
    font-size: 1.25rem;
  }

  .sl-markdown-content h4 {
    font-size: 1rem;
  }

  /* Mobile code blocks - full bleed */
  .sl-markdown-content pre {
    margin-left: -1rem;
    margin-right: -1rem;
    border-radius: 0;
  }

  /* Mobile tables - horizontal scroll */
  .sl-markdown-content table {
    display: block;
    overflow-x: auto;
  }

  /* Mobile spacing adjustments */
  .sl-markdown-content {
    font-size: 0.9375rem;
  }

  .sl-markdown-content aside {
    margin-left: -0.5rem;
    margin-right: -0.5rem;
    padding: 0.75rem 1rem;
  }
}

/* Desktop - sticky header with blur */
@media (min-width: 50em) {
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    background: color-mix(in srgb, var(--sl-color-bg) 85%, transparent);
    border-bottom: 1px solid var(--sl-color-hairline-light);
  }
}

/* Wide desktop - increased content width */
@media (min-width: 72em) {
  :root {
    --sl-content-width: 56rem;
  }
}

/* === Tab Component for Code Examples === */

/* Tab navigation for code examples with multiple language/variant options */
starlight-tabs {
  display: block;
  margin: 1.5rem 0;
}

starlight-tabs [role='tablist'] {
  display: flex;
  border-bottom: 2px solid var(--sl-color-gray-5);
  gap: 0;
  list-style: none;
  padding: 0;
  margin: 0;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

starlight-tabs [role='tab'] {
  padding: 0.75rem 1.25rem;
  border-bottom: 2px solid transparent;
  color: var(--sl-color-gray-3);
  text-decoration: none;
  transition: all 0.2s ease;
  cursor: pointer;
  background: transparent;
  border: none;
  font-family: var(--sl-font);
  font-size: var(--sl-text-base);
  margin-bottom: -2px;
  white-space: nowrap;
  flex-shrink: 0;
}

starlight-tabs [role='tab']:hover {
  color: var(--sl-color-text);
  background: var(--sl-color-gray-1);
}

starlight-tabs [role='tab']:focus-visible {
  outline: 2px solid var(--sl-color-accent);
  outline-offset: -2px;
  border-radius: 0.25rem 0.25rem 0 0;
}

starlight-tabs [role='tab'][aria-selected='true'] {
  color: var(--sl-color-text-accent);
  border-bottom-color: var(--sl-color-accent);
  font-weight: 600;
}

starlight-tabs [role='tabpanel'] {
  margin-top: 0;
}

/* Remove extra margin from code blocks inside tabs */
starlight-tabs [role='tabpanel'] > .expressive-code:first-child {
  margin-top: 0;
}

/* Mobile optimization for tabs */
@media (max-width: 50em) {
  starlight-tabs [role='tab'] {
    padding: 0.625rem 1rem;
    font-size: var(--sl-text-sm);
  }
}

/* === Phase 8: Accessibility & Polish === */

/* Focus States for Keyboard Navigation */
:focus-visible {
  outline: 2px solid var(--sl-color-accent);
  outline-offset: 2px;
  border-radius: 0.25rem;
}

.sl-markdown-content a:focus-visible,
.sidebar-content a:focus-visible,
.right-sidebar-panel a:focus-visible,
button:focus-visible,
.sl-link-button:focus-visible {
  outline: 2px solid var(--sl-color-accent);
  outline-offset: 2px;
}

/* Remove default focus outline when focus-visible is supported */
:focus:not(:focus-visible) {
  outline: none;
}

/* Screen Reader Only Content */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* Print Styles */
@media print {
  /* Hide navigation and interactive elements */
  .header,
  .sidebar,
  .right-sidebar,
  .edit-link,
  .social-icons,
  starlight-theme-select,
  site-search,
  .theme-select,
  .search {
    display: none !important;
  }

  /* Full width content for printing */
  .main-frame,
  .main-pane {
    margin: 0;
    max-width: 100%;
  }

  /* Print-friendly links */
  .sl-markdown-content a {
    color: #000;
    text-decoration: underline;
  }

  /* Show URLs for external links */
  .sl-markdown-content a[href^='http']::after {
    content: ' (' attr(href) ')';
    font-size: 0.75rem;
    color: #666;
    word-break: break-all;
  }

  /* Avoid page breaks inside important elements */
  .sl-markdown-content pre,
  .sl-markdown-content table,
  .sl-markdown-content aside,
  .sl-markdown-content blockquote {
    page-break-inside: avoid;
  }

  /* Print-friendly code blocks */
  .sl-markdown-content pre {
    border: 1px solid #ddd;
    background: #f5f5f5;
  }

  /* Ensure headings stay with their content */
  .sl-markdown-content h1,
  .sl-markdown-content h2,
  .sl-markdown-content h3,
  .sl-markdown-content h4,
  .sl-markdown-content h5,
  .sl-markdown-content h6 {
    page-break-after: avoid;
  }
}
