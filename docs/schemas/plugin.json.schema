{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenCode Plugin Configuration",
  "description": "Configuration file for OpenCode plugins. Precedence for the effective sounds directory: (1) project-specific plugin.json `soundsDir`, (2) `SOUNDS_DATA_DIR` environment variable, (3) computed platform default data directory.",
  "type": "object",
  "x-precedence": [
    "plugin.json (project-specific)",
    "SOUNDS_DATA_DIR environment variable",
    "Computed platform-specific default data directory"
  ],
  "properties": {
    "@pantheon-ai/opencode-warcraft-notifications": {
      "type": "object",
      "description": "Configuration for Warcraft II notifications plugin (Alliance and Horde sounds)",
      "properties": {
        "soundsDir": {
          "type": "string",
          "description": "Directory where sound files should be stored and cached",
          "examples": [
            "/home/user/.cache/opencode-warcraft-sounds",
            "/path/to/custom/sounds",
            "C:\\Users\\Username\\AppData\\Local\\OpenCode\\Sounds"
          ]
        },
        "faction": {
          "type": "string",
          "enum": ["alliance", "horde", "both"],
          "default": "both",
          "description": "Which faction sounds to use: 'alliance' for Alliance sounds only, 'horde' for Horde sounds only, or 'both' for random sounds from both factions",
          "examples": ["alliance", "horde", "both"]
        },
        "showDescriptionInToast": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show toast notifications when idle. When enabled, displays Warcraft II voice lines as toast title with session summary as message. Set to false for sound-only mode.",
          "examples": [true, false]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "soundsDir": "~/.cache/opencode-warcraft-sounds",
        "faction": "both",
        "showDescriptionInToast": true
      }
    },
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "faction": "alliance"
      }
    },
    {
      "@pantheon-ai/opencode-warcraft-notifications": {
        "faction": "horde"
      }
    }
  ]
}